{
  "compilerOptions": {
    // --- Crucial Settings for Node.js ---
    "module": "CommonJS",
    "target": "es2019",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    // --- Path and Output Settings ---
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "noEmit": false
  },
  "include": [
    "src/scripts/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
